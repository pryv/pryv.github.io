    "note": {
      "description": "To record different kinds of text-based notes, from simple text to more complex formatted content like social network posts.",
      "default": {
        "type": "string"
      },
      "formats": {
        "facebook": {
          "description": "A Facebook post. ",
          "comments": "Facebook post can be copied RAW as a value. \nmap: \n   fbPost.message -> pryvEvent.description\n   fbPost.created_time -> pryvEvent.time\n TODO: what to do with videos & pictures?",
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "required": "true"
            },
            "from": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "required": "true"
                },
                "id": {
                  "type": "string",
                  "required": "true"
                }
              }
            },
            "to": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "array",
                  "items":{
                    "type": "object",
                    "properties": {
                      "name": "string",
                      "id": "string"
                    }
                  }
                }
              }
            },
            "message": {
              "type": "string"
            },
            "picture": {
              "type": "string"
            },
            "link": {
              "type": "string"
            },
            "caption": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "source": {
              "type": "string"
            },
            "icon": {
              "type": "string"
            },
            "type": {
              "type": "string"
            }
          }
        },
        "html": {
          "description": "An HTML-formatted note.",
          "maxLength": "4194304"
        },
        "txt": {
          "description": "A plain-text note.",
          "maxLength": "4194304"
        }
      }
    },
