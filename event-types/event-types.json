          "type": "object",
          "properties": {
            "resolution": {
              "type": "number",
              "required": "false"
            },
            "location": {
              "type": "object",
              "properties": {
                "lat": {
                  "type": "number",
                  "required": "true"
                },
                "lng": {
                  "type": "number",
                  "required": "true"
                }
              },
